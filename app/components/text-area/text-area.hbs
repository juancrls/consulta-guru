
<div class="input-container">
    <div class="input-icon">
        <svg viewBox="0 0 24 24" class="alert-icon">
            <path d="M11,15H13V17H11V15M11,7H13V13H11V7M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20Z"></path>
        </svg>
    </div>
    <input 
        value={{this.args.value}}
        oninput={{this.args.onInput}}
        class={{this.args.class}}
        type={{this.args.type}}
        placeholder={{this.args.placeholder}}
        name={{this.args.name}}
        id={{this.args.id}}
        {{!-- required={{this.args.required}} --}}
        {{!-- disabled={{this.args.disabled}} --}}
    />
    
    <div class="input-icon">
        <button onclick={{(perform this.args.onSubmit)}} type="button">TESTE</button>
    </div>
</div>